{
  "name": "ncc-erp-workflow-w2-e2e",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:bdd",
    "test:debug": "playwright test --debug",
    "test:bdd": "npx bddgen && npx playwright test",
    "test:visual": "npx bddgen && npx playwright test --grep \"visual\"",
    "watch:bdd": "nodemon -w ./src/features -w ./src/steps -e feature,js,ts --exec \"npx bddgen\"",
    "test:ui": "concurrently \"npm run watch:bdd\" \"npx playwright test --ui\"",
    "test:chrome": "playwright test --project=chromium",
    "test:report": "playwright show-report --host=127.0.0.1",
    "test:check": "check-tests Playwright \".features-gen/src/features/**/*.js\"",
    "test:check:clean": "check-tests Playwright \"**/*{.,_}{test,spec,cy}.ts\" --typescript --purge",
    "test:check:update": "check-tests Playwright \".features-gen/**/*{.,_}{test,spec,cy}.js\" --update-ids",
    "test:codegen": "playwright codegen",
    "prettier": "prettier ./src --check",
    "prettier:fix": "prettier ./src --write",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix && npm run prettier:fix",
    "prepare": "husky",
    "test:k6": "node ./k6/run-k6.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@estruyf/github-actions-reporter": "^1.9.2",
    "@faker-js/faker": "^9.2.0",
    "@playwright/test": "^1.50.1",
    "@testomatio/reporter": "^1.5.1",
    "@types/k6": "^0.54.2",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "allure-commandline": "^2.30.0",
    "allure-playwright": "^3.0.0-beta.12",
    "check-tests": "^0.9.5",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.10.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "find-free-ports": "^3.1.1",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "lighthouse": "^9.6.8",
    "lodash.get": "^4.4.2",
    "nodemon": "^3.1.6",
    "playwright-bdd": "^7.4.0",
    "playwright-lighthouse": "^2.2.2",
    "typescript": "^5.6.2"
  }
}